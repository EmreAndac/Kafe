@using Kafe.Entities.Entity.Concrete
@model IEnumerable<Table>

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Masa Listesi</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        .table-list {
            display: flex;
            flex-wrap: wrap;
            gap: 20px;
            padding: 20px;
        }

        .table-item {
            width: 150px;
            height: 150px;
            display: flex;
            justify-content: center;
            align-items: center;
            border-radius: 10px;
            cursor: pointer;
        }

        .table {
            width: 100%;
            height: 100%;
            border-radius: 10px;
            display: flex;
            justify-content: center;
            align-items: center;
            text-align: center;
            color: white;
            font-size: 18px;
        }

            .table.available {
                background-color: #28a745; /* Yeşil */
            }

            .table.occupied {
                background-color: #dc3545; /* Kırmızı */
            }
    </style>
</head>
<body>
    <div class="container">
        <div class="table-list">
            @foreach (var table in Model)
            {
                <div class="table-item">
                    <a href="@Url.Action("Details", "Table", new { id = table.Id })">
                        <div class="table @((table.IsOccupied) ? "occupied" : "available")">
                            <h4>Masa @table.TableNumber</h4>
                            <p>@(table.IsOccupied ? "Meşgul" : "Boş")</p>
                        </div>
                    </a>
                </div>
            }
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>